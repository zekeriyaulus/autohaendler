---
const { auto } = Astro.props;
---
<a href={`/fahrzeuge/${auto.id}`} style="text-decoration:none;color:inherit;">
  <article class="card" style="overflow:hidden;">
    <div style="aspect-ratio: 16/10;background:rgba(255,255,255,.05);border-bottom:1px solid var(--line);">
      {auto.bilder?.[0] ? (
        <img src={auto.bilder[0]} alt={auto.titel} loading="lazy" decoding="async" style="width:100%;height:100%;object-fit:cover;" />
      ) : (
        <div style="height:100%;display:flex;align-items:center;justify-content:center;color:var(--muted);font-size:13px;">Kein Bild</div>
      )}
    </div>

    <div style="padding:14px;display:grid;gap:10px;">
      <div style="display:flex;justify-content:space-between;gap:12px;align-items:flex-start;">
        <div style="font-weight:900;line-height:1.2;">{auto.titel}</div>
        <div style="font-weight:900;white-space:nowrap;">{auto.preis.toLocaleString("de-DE")} €</div>
      </div>
      <div class="small">{auto.km.toLocaleString("de-DE")} km · EZ {auto.ez}</div>
      <div style="display:flex;gap:8px;flex-wrap:wrap;">
        {auto.status === "reserviert" && <span class="chip">Reserviert</span>}
        {auto.status === "verkauft" && <span class="chip">Verkauft</span>}
      </div>
    </div>
  </article>
</a>
